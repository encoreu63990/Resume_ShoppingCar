@model ShoppingCar.ViewModels.RegisterVideModel

@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Account, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Account, new { @class = "form-control", required = "required", autocomplete = "off", Value = "user02" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", Value = "1234" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required", Value = "1234" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", Value = "user02" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", Value = "user02@gmail.com" } })
    </div>

    <button class="btn btn-primary">註冊</button>
}

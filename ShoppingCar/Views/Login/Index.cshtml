@model ShoppingCar.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Account, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Account, new { @class = "form-control", required = "required", autocomplete = "off", Value = "user01" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", Value = "1234" })
    </div>

    <button class="btn btn-primary">登入</button>
}

